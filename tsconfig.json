{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "vite-plugin-svgr/client", "@types/node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@app/*": ["src/0_app/*"],
      "@pages/*": ["src/1_pages/*"],
      "@widgets/*": ["src/2_widgets/*"],
      "@features/*": ["src/3_features/*"],
      "@entities/*": ["src/4_entities/*"],
      "@shared/*": ["src/5_shared/*"],
      "@assets/*": ["src/5_shared/assets/*"],
      "@styles/*": ["src/5_shared/styles/*"],
      "@ui/*": ["src/5_shared/ui/*"]
    },

    /* Linting */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "types"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": ["node_modules"]
}
